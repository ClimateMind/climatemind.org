.card
  color darkTeal
  background-color white
  border-radius 12px
  overflow hidden
  box-sizing border-box
  +above('tablet')
    width 280px
    min-height 340px

  &--facts
    padding 20px
    text-align center

  &__details
    padding 12px 20px 16px 20px

  &__image
    width 100%

  &__icon
    display flex
    justify-content center
    align-items center
    height 120px
    padding-bottom 8px

  &__description
    emphasizedBody(16px)
    margin 20px 0

  &__link
    emphasizedBody(16px)
    &
    &:visited
      color darkBlue
      text-decoration none
    &:hover
    &:active
    &:focus
      color green
      text-decoration underline

.person
  &__name
    subline(24px)
  &__role
    emphasizedBody(16px)
  &__links
    margin-top 12px
    display flex
    justify-content space-between

.person-list
  display flex
  flex-wrap wrap
  & > *
    margin 0 0 20px 0
    max-width 320px
    +above('tablet')
      margin 0 20px 20px 0


