.teaser
  position relative
  background linear-gradient(90deg, rgba(darkBlue, 0.85), rgba(teal, 0.85))
  color darkTeal
  display flex
  justify-content center
  align-items center
  flex-direction column
  padding 84px 0 72px 0
  +above('tablet')
    padding 112px 0
  +above('desktop')
    padding 140px 0 132px 0

  &__wrapper
    margin 0 gutterLarge

  &__content
    max-width 600px

  &__headline
    margin 20px 0
    headline(32px)
    +above('tablet')
      font-size 44px
      margin 32px 0
    +above('desktop')
      font-size 52px

  &__subline
    subline(22px)
    margin 32px 0
    +above('tablet')
      margin 40px 0 40px 0
      font-size 26px
      max-width 600px
    +above('desktop')
      margin 40px 0 60px 0
      font-size 28px
      max-width 100%

  &__text
    font-size 18px
    margin 16px 0
    +above('tablet')
      font-size 20px
      margin 20px 0

  &__decoration
    pointer-events none
    position absolute
    top 0
    left 0
    width 100%
    height 100%

  &__wave-top
    position absolute
    top -1px
    left 0
    width 100%
    height 40px
    background-image url('images/wave/wave-top-mobile.svg')
    background-position-x 100px
    +above('tablet')
      height 50px
      background-image url('images/wave/wave-top.svg')
      background-position-x center
  &__wave-bottom
    position absolute
    bottom -1px
    left 0
    width 100%
    height 40px
    background-image url('images/wave/wave-bottom-mobile.svg')
    background-position-x 100px
    +above('tablet')
      height 50px
      background-image url('images/wave/wave-bottom.svg')
      background-position-x center

  &__next-up
    text-align center
    &-icon
      width 24px
      +above('tablet')
        width 28px
      +above('desktop')
        width 32px
      animation-duration 2s
      animation-iteration-count infinite
      transform-origin bottom
      animation-name bounce
      animation-timing-function ease

@keyframes bounce
    0%   { transform: translateY(0); }
    30%  { transform: translateY(-12px); }
    45%  { transform: translateY(0); }
    100% { transform: translateY(0); }


